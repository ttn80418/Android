<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:contentDescription="@string/event_t001"
        android:src="@drawable/slider1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_t002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="@dimen/padding"
            android:text="@string/event_t002"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_t003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="@dimen/padding"
            android:text="@string/event_t003"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>